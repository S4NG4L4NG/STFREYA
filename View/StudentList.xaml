<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="STFREYA.View.StudentList"
             Title="StudentList">
    <ScrollView>
        <VerticalStackLayout>

            <!-- BACK BUTTON -->
            <Button 
            Text="Back" 
            Command="{Binding BackCommand}" 
            HorizontalOptions="Start" 
            Margin="10" />

            <!-- TITLE -->
            <Label 
            Text="Student Data Management"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontAttributes="Bold" 
            FontSize="20" />

            <!-- TOTAL STUDENTS DISPLAY -->
            <Label Text="{Binding TotalStudentsDisplay}" 
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="10" />

            <!-- LOAD STUDENTS BUTTON -->
            <Button Text="Load Students" Command="{Binding LoadStudentCommand}" />

            <!-- EXPORT TO CSV BUTTON -->
            <Button Text="Export to CSV"
                Command="{Binding ExportToCSVCommand}"
                HorizontalOptions="Center"
                Margin="10" />
            
            <Button Text="Generate Report"
                    Command="{Binding GenerateReportCommand}"
                    HorizontalOptions="Center"
                    Margin="10" />
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Button Text="BSCS" Command="{Binding FilterByCourseCommand}" CommandParameter="BSCS" />
                <Button Text="BSIT" Command="{Binding FilterByCourseCommand}" CommandParameter="BSIT" />
                <Button Text="BMMA" Command="{Binding FilterByCourseCommand}" CommandParameter="BMMA" />
            </HorizontalStackLayout>

            <!-- RESET FILTER BUTTON -->

            <!-- SEARCH BAR -->
            <SearchBar Placeholder="Search by name, email, or course"
                   Text="{Binding SearchTerm}" />

            <!-- TOTAL STUDENTS PER COURSE -->
            <Label Text="Total Students per Course" 
               FontAttributes="Bold"
               HorizontalOptions="Center" 
               Margin="10" />

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Button Text="Email BSCS" Command="{Binding SendEmailCommand}" CommandParameter="BSCS" />
                <Button Text="Email BSIT" Command="{Binding SendEmailCommand}" CommandParameter="BSIT" />
                <Button Text="Email BMMA" Command="{Binding SendEmailCommand}" CommandParameter="BMMA" />
            </HorizontalStackLayout>

            <!-- RESET FILTER BUTTON -->
            <Button Text="Show All Students" Command="{Binding LoadStudentCommand}" Margin="10" />

            <!-- QR CODE -->
            <Button Text="View QR Code"
        Command="{Binding NavigateToQRCodeCommand}" 
        CommandParameter="{Binding SelectedStudent}" />
            <!-- LIST OF STUDENTS -->
            <ListView ItemsSource="{Binding Students}" SelectedItem="{Binding SelectedStudent}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="10">
                                <CheckBox IsChecked="{Binding IsSelected}" />
                                <Label Text="{Binding FullName}" FontAttributes="Bold" />
                                <Label Text=" | " FontAttributes="Bold" />
                                <Label Text="{Binding age}" />
                                <Label Text=" | " FontAttributes="Bold" />
                                <Label Text="{Binding email}" />
                                <Label Text=" | " FontAttributes="Bold" />
                                <Label Text="{Binding contactno}" />
                                <Label Text=" | " FontAttributes="Bold" />
                                <Label Text="{Binding course}" />
                                <Label Text=" | " FontAttributes="Bold" />
                                <Label Text="{Binding gender}" />
                            </StackLayout>
                            <ViewCell.ContextActions>
                                <MenuItem Command="{Binding BindingContext.NavigateToProfileCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                              CommandParameter="{Binding .}" 
                              Text="View Profile" />
                            </ViewCell.ContextActions>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

